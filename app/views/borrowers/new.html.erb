<%= form_for(@borrower) do |f| %>
	<%= f.label :first_name, "First name" %>
	<%= f.text_field :first_name%>
	<%= f.label :last_name, "Last_name" %>
	<%= f.text_field :last_name%>
	<%= f.label :email, "Email" %>
	<%= f.text_field :email %>
	<%= f.label :password, "Password" %>
	<%= f.text_field :password %>
	<%= f.label :money, "Money" %>
	<%= f.text_field :money %>
	<%= f.label :purpose, "Purpose" %>
	<%= f.text_field :purpose %>
	<br>
	<%= f.submit %>

	<%end%>


